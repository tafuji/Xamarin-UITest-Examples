<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGallery.SliderDemoPage"
             Title="Slider">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Slider AutomationId="SliderDemoPage.Slider" Minimum="0" Maximum="100"  Value="{Binding Value}" Margin="20, 0, 20, 0"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Slider Value is "/>
                <Label AutomationId="SliderDemoPage.ValueLabel" Text="{Binding Value}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>