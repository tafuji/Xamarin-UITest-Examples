<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGallery.SwitchDemoPage"
             Title="Switch">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Switch AutomationId="SwitchDemoPage.Switch" IsToggled="{Binding Value}" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Switch is "/>
                <Label AutomationId="SwitchDemoPage.ValueLabel" Text="{Binding Value}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>