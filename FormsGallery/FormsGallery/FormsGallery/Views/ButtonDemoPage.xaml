<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGallery.ButtonDemoPage"
             Title="Button">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Button AutomationId="ButtonDemoPage.Button" Command="{Binding ClickCommand}" Text="Click" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Click Count "/>
                <Label AutomationId="FormsGallery.ButtonDemoPage.CountLabel" Text="{Binding ClickCount}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>